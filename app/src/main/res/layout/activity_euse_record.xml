<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.EUseRecordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:paddingBottom="@dimen/margin_normal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/margin_normal">

        <TextView
            android:id="@+id/activity_euse_record_dev_label"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="设备号" />

        <TextView
            android:id="@+id/activity_euse_record_tv_dev_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/activity_euse_record_dev_label"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/activity_euse_record_dev_label" />

        <LinearLayout
            android:id="@+id/activity_euse_record_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_euse_record_dev_label"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/margin_normal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_euse_record_owner_label"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"

                    android:text="户主" />

                <TextView
                    android:id="@+id/activity_euse_record_tv_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_euse_record_room_label"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"

                    android:text="门牌号" />

                <TextView
                    android:id="@+id/activity_euse_record_tv_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/activity_euse_record_power_label"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_euse_record_group"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="运行状态" />

        <TextView
            android:id="@+id/activity_euse_record_tv_run_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/activity_euse_record_power_label"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/activity_euse_record_power_label" />

        <TextView
            android:id="@+id/activity_euse_record_tv_select_dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/s_bg_div_blue"
            android:clickable="true"
            android:paddingBottom="6dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="6dp"
            android:text="设备选取"
            android:textColor="@color/s_btn_blue_text" />
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/activity_e_User_record_fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

</LinearLayout>